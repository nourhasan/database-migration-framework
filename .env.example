# Database Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Database Engine: sqlserver, postgresql, or mysql
DB_ENGINE=sqlserver

# Database Server/Host
DB_SERVER=localhost

# Database Name
DB_NAME=your_database_name

# Database Credentials
DB_USER=your_username
DB_PASSWORD=your_password

# Database Port (optional - uses default if not specified)
# SQL Server: 1433, PostgreSQL: 5432, MySQL: 3306
DB_PORT=

# Application Configuration
# Path to Excel file for data import migrations
EXCEL_PATH=./data/sample_data.xlsx

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
